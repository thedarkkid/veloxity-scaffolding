{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "/dist/",
    "rootDir": "src",
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/core/@highway/*", "**/*.spec.ts"
  ],
  "lib": [
    "es2017",
    "dom"
  ]
}
